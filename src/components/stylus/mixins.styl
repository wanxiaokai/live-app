border-1px($color)
  border :none
  position :relative
  &:before
    content :''
    position :absolute
    top :0
    left :0
    background :$color
    width :100%
    height :1px
    transform :scaleY(0.5)

bg-image($url)
  background-image :url($url+"@2x.png")
  @media (min-device-pixel-ratio:3)
    background-image :url($url+"@3x.png")

bg-star($url)
  background-image :url('../star/'+$url+"@2x.png")
  @media (min-device-pixel-ratio:3)
    background-image :url('../star/'+$url+"@3x.png")
